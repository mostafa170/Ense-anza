<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Gramatica.IndicativoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/presentindicativo"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/presentindicativo"
                android:paddingTop="25dp"
                android:text="De indicativo"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />


            <Button
                android:id="@+id/Pretérito_perfecto"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#009688"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/presentindicativo"
                android:paddingTop="25dp"
                android:text="Pretérito perfecto"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Pretérito_indefinido"
                android:layout_width="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#e7595d"
                android:drawableLeft="@drawable/presentindicativo"
                android:paddingLeft="45dp"
                android:text="Pretérito indefinido"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Pretérito_imperfecto"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#a084d1"
                android:drawableTop="@drawable/presentindicativo"
                android:paddingTop="25dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="Pretérito imperfecto"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Pretérito_pluscuamperfecto"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#9C27B0"
                android:drawableTop="@drawable/presentindicativo"
                android:paddingTop="25dp"
                android:text="Pluscuamperfecto"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Futurosimple"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:background="#3F51B5"
                android:drawableTop="@drawable/presentindicativo"
                android:paddingTop="40dp"
                android:text="Futuro simple"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />


            <Button
                android:id="@+id/Futurocompuesto"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#cc8d66"
                android:drawableTop="@drawable/presentindicativo"
                android:paddingTop="40dp"
                android:text="Futuro Compuesto"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
